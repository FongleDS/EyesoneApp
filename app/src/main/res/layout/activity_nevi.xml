<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeviActivity">


    <EditText
        android:id="@+id/origin"
        android:layout_width="232dp"
        android:layout_height="67dp"
        android:layout_marginStart="7dp"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="text"
        android:text="출발지 입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="232dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:inputType="text"
        android:text="목적지 입력"
        app:layout_constraintEnd_toEndOf="@+id/origin"
        app:layout_constraintStart_toStartOf="@+id/origin"
        app:layout_constraintTop_toBottomOf="@+id/origin" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destination"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/voicerecoder"
        android:layout_width="106dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/voice" />

    <Button
        android:id="@+id/get_directions_button"
        android:layout_width="173dp"
        android:layout_height="124dp"
        android:backgroundTint="#DBF2C5"

        android:onClick="getDirections"
        android:text="경로 찾기"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/origin"
        app:layout_constraintTop_toTopOf="@+id/origin" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:paddingLeft="15sp"
        android:paddingTop="10sp"
        android:text="네비게이션"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mapImg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mapImg"
        android:layout_width="38dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/origin"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/map" />


</androidx.constraintlayout.widget.ConstraintLayout>