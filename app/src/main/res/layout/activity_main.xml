<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/detect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCF9A0"
        android:text="장애물탐지"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nevi"
        app:layout_constraintVertical_weight="1"/>

    <Button
        android:id="@+id/nevi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCF9A0"
        android:text="네비게이션"
        android:layout_margin="20dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detect"
        app:layout_constraintBottom_toTopOf="@id/textreader"
        app:layout_constraintVertical_weight="1"/>

    <Button
        android:id="@+id/textreader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCF9A0"
        android:text="텍스트 읽어주기"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nevi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
