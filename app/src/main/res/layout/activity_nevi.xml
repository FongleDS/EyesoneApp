<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/layout_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeviActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mapImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/map" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네비게이션"
                android:fontFamily="@font/pretendardbold"
                android:textSize="25sp"
                android:textColor="#5B5B5B"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:text="현재 내 위치 정보"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:inputType="text"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/set_address_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="목적지를 입력하세요."
            android:inputType="textPostalAddress"/>

        <Button
            android:id="@+id/btn_setdes"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="#DBF2C5"
            android:gravity="center"
            android:inputType="text"
            android:text="목적지로 설정"
            app:layout_constraintEnd_toEndOf="@+id/origin"
            app:layout_constraintStart_toStartOf="@+id/origin"
            app:layout_constraintTop_toBottomOf="@+id/origin" />

        <fragment
            android:id="@+id/Nevi"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="401dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_destination"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/voicerecoder"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/voice" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>